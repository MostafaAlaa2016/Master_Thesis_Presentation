\begin{frame}[fragile]{Dataset}
Our dataset consists of \textbf{1,722,321} labeled data points.%
\begin{center}
	\begin{figure}[!t]
		\centering
		\begin{tikzpicture}[scale=.8]
		\input{./Figures/dataset_size_ar.tex}
		\end{tikzpicture}%
		\caption{{\tiny Number of verses per \textit{meter} ordered descendingly on y-axis vs. meter name on x-axis.}}\label{Fig:Data_Size_Distribution}
	\end{figure}
\end{center}

\end{frame}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{frame}[fragile]{Dataset}
Basic cleansing rules:
	\begin{itemize}
		\item Filtering the 16 classic meters.% Ignore the non-classic.
		\item Removing many unnecessary white spaces.
		\item Removing non-Arabic characters.
		\item Factoring Shadaa and Tanween.
	\end{itemize}

\begin{table}[!ht]
	\centering
	\resizebox{\linewidth}{!}{
		\begin{tabular}{c c c | c c}
			% \hline
			\toprule
			\textbf{\small{Diacritics}}     & \small{\textit{With Shadda}} & \small{\textit{Without shadaa}} &
			\small{\textit{With tanween}} & \small{\textit{Without tanween}} \\
			% \hline
			\midrule
			\textbf{\small{Shape}}   & \textarabic{دَّ} &  \textarabic{دْدَ} & \textarabic{دً} &  \textarabic{دَ+نْ}\\
			% \hline
			\bottomrule
	\end{tabular}}
	\caption{Diacritics on the letter  \textarabic{ د }}\label{Tab:Diacritics_Dal}
\end{table}
\end{frame}
